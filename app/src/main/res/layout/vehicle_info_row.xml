<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vehicle_row_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_banner_height"
        android:background="@drawable/banner_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/main_margin_size"
        android:text="Vehicle Information"
        android:textColor="?attr/textColorAlertDialogListItem"
        android:textSize="@dimen/history_row_title" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/colorBackgroundFloating"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/main_margin_size">

            <TextView
                android:id="@+id/make_model"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tab_banner_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/main_margin_size"
                android:text="Make / Model :"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/history_row_title" />
            <TextView
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tab_banner_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/main_margin_size"
                android:text="Color :"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/history_row_title" />
            <TextView
                android:id="@+id/license_plate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tab_banner_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/main_margin_size"
                android:text="License Plate :"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/history_row_title" />
            <TextView
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/tab_banner_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/main_margin_size"
                android:text="Reason :"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/history_row_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="?attr/colorBackgroundFloating"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/main_margin_size">

            <TextView
                android:id="@+id/make_model_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_banner_height"
                android:paddingLeft="@dimen/main_margin_size"
                android:text="Toyota, 1990"
                android:textColor="@color/add_vehicle_sub_color"
                android:textSize="@dimen/history_row_title"
                android:textStyle="italic"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/color_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_banner_height"

                android:gravity="center_vertical"
                android:paddingLeft="@dimen/main_margin_size"
                android:text="Gray"
                android:textColor="@color/add_vehicle_sub_color"
                android:textSize="@dimen/history_row_title"
                android:textStyle="italic" />
            <TextView
                android:id="@+id/license_plate_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_banner_height"

                android:gravity="center_vertical"
                android:paddingLeft="@dimen/main_margin_size"
                android:text="DDD1090-345"
                android:textColor="@color/add_vehicle_sub_color"
                android:textSize="@dimen/history_row_title"
                android:textStyle="italic" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_banner_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/main_margin_size"
                android:text=""
                android:textColor="@color/add_vehicle_sub_color"
                android:textSize="@dimen/history_row_title"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?attr/colorBackgroundFloating"
        android:paddingLeft="@dimen/main_margin_size"
        android:paddingRight="@dimen/main_margin_size">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/main_margin_size"
            android:paddingLeft="@dimen/main_margin_size"
            android:paddingRight="@dimen/main_margin_size">

            <TextView
                android:id="@+id/button1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expired Inspection"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/button_text_size"
                android:layout_marginBottom="@dimen/checkbox_spacing"
                android:background="@drawable/button_background"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/button2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expired Pirates"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/button_text_size"
                android:layout_marginBottom="@dimen/checkbox_spacing"
                android:background="@drawable/button_background"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/button3"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inerpoable"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/button_text_size"
                android:layout_marginBottom="@dimen/checkbox_spacing"
                android:background="@drawable/button_background"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/button4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/button_text_size"
                android:layout_marginBottom="@dimen/checkbox_spacing"
                android:background="@drawable/button_background"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/main_margin_size"
            android:paddingLeft="@dimen/main_margin_size"
            android:paddingRight="@dimen/main_margin_size"
            android:paddingBottom="@dimen/main_margin_size">

            <TextView
                android:id="@+id/button5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wrecked"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/button_text_size"
                android:layout_marginBottom="@dimen/checkbox_spacing"
                android:background="@drawable/button_background"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/button6"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On Blocks"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/button_text_size"
                android:layout_marginBottom="@dimen/checkbox_spacing"
                android:background="@drawable/button_background"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/button7"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Missing Pcots"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="?attr/textColorAlertDialogListItem"
                android:textSize="@dimen/button_text_size"
                android:layout_marginBottom="@dimen/checkbox_spacing"
                android:background="@drawable/button_background"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>